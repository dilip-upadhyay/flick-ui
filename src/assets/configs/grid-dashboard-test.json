{
  "type": "layout",
  "version": "1.0",
  "theme": "default",
  "layout": {
    "direction": "column",
    "gap": "none",
    "padding": "none"
  },
  "components": [
    {
      "id": "grid-dashboard-test",
      "type": "dashboard",
      "props": {
        "title": "Grid Layout Dashboard Test",
        "subtitle": "Testing CSS grid positioning for dashboard widgets",
        "layoutConfig": {
          "type": "five-part",
          "body": {
            "enabled": true,
            "title": "Main Dashboard Body",
            "className": "dashboard-main-content",
            "widgets": [
              {
                "id": "widget-1",
                "type": "metric",
                "title": "Total Users",
                "gridColumn": "1 / 7",
                "gridRow": "1 / 2",
                "metric": {
                  "value": 1247,
                  "label": "Active Users",
                  "format": "number",
                  "change": 5.2
                }
              },
              {
                "id": "widget-2",
                "type": "metric",
                "title": "Revenue",
                "gridColumn": "7 / 13",
                "gridRow": "1 / 2",
                "metric": {
                  "value": 48250,
                  "label": "Monthly Revenue",
                  "format": "currency",
                  "change": 12.5
                }
              },
              {
                "id": "widget-3",
                "type": "chart",
                "title": "Sales Chart",
                "gridColumn": "1 / 13",
                "gridRow": "2 / 4",
                "chart": {
                  "type": "line",
                  "data": {
                    "labels": ["Jan", "Feb", "Mar", "Apr", "May"],
                    "datasets": [{
                      "label": "Sales",
                      "data": [12, 19, 3, 5, 2],
                      "borderColor": "#3498db"
                    }]
                  }
                }
              },
              {
                "id": "widget-4",
                "type": "list",
                "title": "Recent Activities",
                "gridColumn": "1 / 7",
                "gridRow": "4 / 6",
                "list": {
                  "items": [
                    {
                      "primary": "User john.doe@example.com registered",
                      "secondary": "2 minutes ago"
                    },
                    {
                      "primary": "New order #12345 created",
                      "secondary": "5 minutes ago"
                    },
                    {
                      "primary": "Payment processed successfully",
                      "secondary": "8 minutes ago"
                    }
                  ]
                }
              },
              {
                "id": "widget-5",
                "type": "progress",
                "title": "Monthly Goal",
                "gridColumn": "7 / 13",
                "gridRow": "4 / 6",
                "progress": {
                  "current": 75,
                  "target": 100,
                  "label": "Progress"
                }
              }
            ]
          }
        },
        "grid": {
          "columns": 12,
          "gap": "medium"
        }
      }
    }
  ]
}
