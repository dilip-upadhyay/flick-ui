{
  "title": "User Registration Form",
  "description": "Create your account to get started with our platform",
  "layout": "vertical",
  "fields": [
    {
      "id": "firstName",
      "type": "text",
      "label": "First Name",
      "placeholder": "Enter your first name",
      "required": true,
      "validation": {
        "type": "minLength",
        "value": 2,
        "message": "First name must be at least 2 characters long"
      }
    },
    {
      "id": "lastName",
      "type": "text",
      "label": "Last Name",
      "placeholder": "Enter your last name",
      "required": true,
      "validation": {
        "type": "minLength",
        "value": 2,
        "message": "Last name must be at least 2 characters long"
      }
    },
    {
      "id": "email",
      "type": "email",
      "label": "Email Address",
      "placeholder": "Enter your email address",
      "required": true,
      "validation": {
        "type": "email",
        "message": "Please enter a valid email address"
      }
    },
    {
      "id": "phone",
      "type": "tel",
      "label": "Phone Number",
      "placeholder": "(555) 123-4567",
      "required": false,
      "validation": {
        "type": "pattern",
        "value": "^\\(?([0-9]{3})\\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$",
        "message": "Please enter a valid phone number"
      }
    },
    {
      "id": "password",
      "type": "password",
      "label": "Password",
      "placeholder": "Create a strong password",
      "required": true,
      "validation": {
        "type": "minLength",
        "value": 8,
        "message": "Password must be at least 8 characters long"
      }
    },
    {
      "id": "confirmPassword",
      "type": "password",
      "label": "Confirm Password",
      "placeholder": "Confirm your password",
      "required": true,
      "validation": {
        "type": "confirmField",
        "confirmField": "password",
        "message": "Passwords do not match"
      }
    },
    {
      "id": "dateOfBirth",
      "type": "date",
      "label": "Date of Birth",
      "required": true,
      "validation": {
        "type": "max",
        "value": "2006-01-01",
        "message": "You must be at least 18 years old"
      }
    },
    {
      "id": "gender",
      "type": "select",
      "label": "Gender",
      "placeholder": "Select your gender",
      "required": false,
      "options": [
        { "value": "male", "label": "Male" },
        { "value": "female", "label": "Female" },
        { "value": "other", "label": "Other" },
        { "value": "prefer-not-to-say", "label": "Prefer not to say" }
      ]
    },
    {
      "id": "interests",
      "type": "checkbox",
      "label": "Interests",
      "required": false,
      "options": [
        { "value": "technology", "label": "Technology" },
        { "value": "sports", "label": "Sports" },
        { "value": "music", "label": "Music" },
        { "value": "travel", "label": "Travel" },
        { "value": "reading", "label": "Reading" },
        { "value": "cooking", "label": "Cooking" }
      ]
    },
    {
      "id": "newsletter",
      "type": "checkbox",
      "label": "Newsletter Subscription",
      "required": false,
      "options": [
        { "value": "subscribe", "label": "Yes, I want to receive updates and newsletters" }
      ]
    },
    {
      "id": "terms",
      "type": "checkbox",
      "label": "Terms and Conditions",
      "required": true,
      "options": [
        { "value": "accepted", "label": "I agree to the Terms and Conditions and Privacy Policy" }
      ],
      "validation": {
        "type": "required",
        "message": "You must accept the terms and conditions to continue"
      }
    }
  ],
  "actions": [
    {
      "type": "submit",
      "label": "Create Account",
      "variant": "primary"
    },
    {
      "type": "reset",
      "label": "Clear Form",
      "variant": "secondary"
    }
  ]
}
