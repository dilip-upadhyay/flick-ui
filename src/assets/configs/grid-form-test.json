{
  "type": "layout",
  "version": "1.0",
  "theme": "default",
  "layout": {
    "direction": "column",
    "gap": "medium",
    "padding": "medium"
  },
  "components": [
    {
      "id": "test-form-header",
      "type": "header",
      "props": {
        "title": "Grid Layout Test Form",
        "subtitle": "Testing custom grid positioning",
        "className": "form-header"
      }
    },
    {
      "id": "test-grid-form",
      "type": "form",
      "props": {
        "title": "Grid Layout Form",
        "submitText": "Submit",
        "layout": "grid",
        "fields": [
          {
            "id": "firstName",
            "type": "text",
            "label": "First Name",
            "placeholder": "Enter first name",
            "required": true,
            "gridColumn": "1 / 2 / 2 / 3"
          },
          {
            "id": "lastName", 
            "type": "text",
            "label": "Last Name",
            "placeholder": "Enter last name",
            "required": true,
            "gridColumn": "1 / 3 / 2 / 4"
          },
          {
            "id": "email",
            "type": "email",
            "label": "Email Address",
            "placeholder": "Enter email",
            "required": true,
            "gridColumn": "2 / 1 / 3 / 5"
          },
          {
            "id": "phone",
            "type": "text",
            "label": "Phone Number",
            "placeholder": "Enter phone",
            "gridColumn": "3 / 1 / 4 / 3"
          },
          {
            "id": "address",
            "type": "textarea",
            "label": "Address",
            "placeholder": "Enter address",
            "gridColumn": "3 / 3 / 5 / 5"
          }
        ]
      }
    }
  ]
}
