{
  "type": "layout",
  "version": "1.0",
  "theme": "default",
  "metadata": {
    "title": "Form Preview Test",
    "description": "Testing form grid layout in preview mode"
  },
  "layout": {
    "direction": "column",
    "gap": "medium",
    "padding": "medium"
  },
  "components": [
    {
      "id": "form-header",
      "type": "text",
      "props": {
        "content": "Grid Layout Form Demo",
        "variant": "h2",
        "className": "form-demo-header"
      }
    },
    {
      "id": "registration-form",
      "type": "form",
      "props": {
        "title": "User Registration Form",
        "description": "Create your account to get started with our platform",
        "layout": "vertical",
        "fields": [
          {
            "id": "firstName",
            "type": "text",
            "label": "First Name",
            "placeholder": "Enter your first name",
            "required": true,
            "gridColumn": "1 / 1 / 2 / 7",
            "validation": {
              "type": "minLength",
              "value": 2,
              "message": "First name must be at least 2 characters long"
            }
          },
          {
            "id": "lastName",
            "type": "text",
            "label": "Last Name",
            "placeholder": "Enter your last name",
            "required": true,
            "gridColumn": "1 / 7 / 2 / 13",
            "validation": {
              "type": "minLength",
              "value": 2,
              "message": "Last name must be at least 2 characters long"
            }
          },
          {
            "id": "email",
            "type": "email",
            "label": "Email Address",
            "placeholder": "Enter your email address",
            "required": true,
            "gridColumn": "2 / 1 / 3 / 13",
            "validation": {
              "type": "email",
              "message": "Please enter a valid email address"
            }
          },
          {
            "id": "phone",
            "type": "tel",
            "label": "Phone Number",
            "placeholder": "(555) 123-4567",
            "required": false,
            "validation": {
              "type": "pattern",
              "value": "^\\+?[1-9]\\d{1,14}$",
              "message": "Please enter a valid phone number"
            }
          },
          {
            "id": "password",
            "type": "password",
            "label": "Password",
            "placeholder": "Create a strong password",
            "required": true,
            "validation": {
              "type": "minLength",
              "value": 6,
              "message": "Password must be at least 6 characters long"
            }
          },
          {
            "id": "confirmPassword",
            "type": "password",
            "label": "Confirm Password",
            "placeholder": "Confirm your password",
            "required": true,
            "validation": {
              "type": "custom",
              "message": "Passwords do not match"
            }
          },
          {
            "id": "dateOfBirth",
            "type": "date",
            "label": "Date of Birth",
            "required": false
          },
          {
            "id": "gender",
            "type": "select",
            "label": "Gender",
            "required": false,
            "options": [
              { "value": "", "label": "Select gender" },
              { "value": "male", "label": "Male" },
              { "value": "female", "label": "Female" },
              { "value": "other", "label": "Other" },
              { "value": "prefer-not-to-say", "label": "Prefer not to say" }
            ]
          },
          {
            "id": "interests",
            "type": "checkbox",
            "label": "Interests",
            "required": false,
            "options": [
              { "value": "technology", "label": "Technology" },
              { "value": "sports", "label": "Sports" },
              { "value": "music", "label": "Music" },
              { "value": "travel", "label": "Travel" },
              { "value": "food", "label": "Food & Cooking" },
              { "value": "reading", "label": "Reading" }
            ]
          },
          {
            "id": "newsletter",
            "type": "checkbox",
            "label": "Email Preferences",
            "required": false,
            "options": [
              { "value": "newsletter", "label": "Subscribe to our newsletter" },
              { "value": "promotions", "label": "Receive promotional emails" }
            ]
          },
          {
            "id": "terms",
            "type": "checkbox",
            "label": "Legal",
            "required": true,
            "options": [
              { "value": "terms", "label": "I agree to the Terms of Service" },
              { "value": "privacy", "label": "I agree to the Privacy Policy" }
            ]
          }
        ],
        "actions": [
          {
            "type": "submit",
            "label": "Create Account",
            "variant": "primary",
            "className": "submit-button"
          },
          {
            "type": "button",
            "label": "Cancel",
            "variant": "secondary",
            "className": "cancel-button"
          }
        ]
      }
    }
  ]
}
